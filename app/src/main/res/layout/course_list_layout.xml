<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="2dp"
    android:padding="5dp"

    android:orientation="horizontal"

    android:elevation="@dimen/cardview_default_radius"
    android:layout_height="wrap_content">
    <LinearLayout
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <TextView
        android:id="@+id/courseItemTextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:layout_weight="9"

        android:layout_toStartOf="@+id/readImageview"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textSize="15sp">

    </TextView>
    <ImageView

        android:id="@+id/readImageview"
        android:layout_weight="1"
        android:layout_width="35dp"
        android:layout_height="35dp"

        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"

        android:layout_marginBottom="5dp"
        android:src="@drawable/white_tick_unverified_icon">

    </ImageView>
    <ImageView

        android:layout_weight="1"
        android:id="@+id/favImageView"

        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_toEndOf="@id/readImageview"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"

        android:layout_marginTop="5dp"

        android:layout_marginBottom="5dp"
        android:src="@drawable/heart_unlike">

    </ImageView>
    </LinearLayout>
</RelativeLayout>