<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical"
    android:id="@+id/linear_play"
    android:layout_height="match_parent"
    tools:context=".Youtube_play">
<com.airbnb.lottie.LottieAnimationView
    android:id="@+id/lottie_play"
    app:lottie_loop="true"
android:visibility="gone"
    app:lottie_rawRes="@raw/lottiel_no_internet"
   app:lottie_autoPlay="true"
    android:background="#039BE5"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />
<androidx.recyclerview.widget.RecyclerView
    android:layout_weight="100"
    android:id="@+id/playrecycler"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

</androidx.recyclerview.widget.RecyclerView>
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/play_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-5584279718709862/7828896396">
    </com.google.android.gms.ads.AdView>
</LinearLayout>